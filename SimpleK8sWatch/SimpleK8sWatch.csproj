<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <PackageId>SimpleK8sWatch</PackageId>
        <Version>0.0.3</Version>
        <Authors>Tobias Braun</Authors>
        <Company>tobi.braun (at) gmail (dot) com</Company>
        <Description>
            .NET standard 2.1 library (C#) providing an easy to use watcher for kubernetes events.
            See https://github.com/tbraun-de/SimpleK8sWatch for more information.
        </Description>
        <RepositoryUrl>https://github.com/tbraun-de/SimpleK8sWatch</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Title>SimpleK8sWatch</Title>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="KubernetesClient" Version="7.0.8" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="LICENSE.txt" Pack="true" PackagePath="" />
    </ItemGroup>
    
    <PropertyGroup>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    </PropertyGroup>

</Project>
